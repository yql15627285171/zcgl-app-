/* enquire.wxss */
page{
  background-color: #f0f0f0;
}

.header{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;
  height: 70rpx;
  margin-top: 10rpx;
}

.placeholder{
  font-size: 24rpx;
  color: #cbcbcb;
}

.checkView{
  display: flex;
  align-items: center;
  background-color: white;
  height: 60rpx;
  width: 75%;
}

.enquireImg{
  height: 40rpx;
  width: 40rpx;
  margin: 0 20rpx;
}
.search{
  color: burlywood;
  margin-left: 30rpx;
  font-size: 28rpx;
}

.equipment,.histroy{
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: white;
  margin: 10rpx 0;
}

.equipment_imageView{
  height: 300rpx;
  margin: 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
}

image{
  width: 300rpx;
  height: 250rpx;
}

text{
  margin:0 20rpx;
  color: #999;
}

.histroy{
  /* justify-content: space-between */
  flex-wrap: wrap;
  height: 160rpx;
}

.histroy view{
  width: 50%;
  height: 50%;
  display: flex;
  align-items: center;
}

.histroy image{
  height: 40rpx;
  width: 40rpx;
}

.time image,.person image{
  margin-left: 30rpx;
}

.histroy text{
  font-size: 28rpx;
}
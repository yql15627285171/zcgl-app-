/* scanInfo.wxss */
page{
  background-color: #f0f0f0;
}


.header{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 350rpx;
  background: white;
}

.header-left{
  padding-left: 20rpx;
  height: 250rpx;
  display: flex;
}

.eqv-image{
  height: 250rpx;
  width: 300rpx;

}

.camera{
  height: 80rpx;
  width: 80rpx;
  align-self: flex-end;
}

.header-right{
  margin-right: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.sureBtn{
  width: 200rpx;
  height: 80rpx;
}

.info{
  background-color: white;
  color: #999;
  height: 80rpx;
  margin: 10rpx 0rpx;
  padding: 0 20rpx;
  line-height: 80rpx;
  font-size: 36rpx;
}

.edit-view{
  color: black;
}

.person{
   display: flex; 
   justify-content: space-between; 
   align-items: center;  
}

.person-view{
  display:flex;
  align-items: center;
}

.person-view view{
  width: 80px;
}



.edit{
  width: 56rpx;
  height: 56rpx;
}

.alertBG{
  /* display: none; */
  position:absolute;
  z-index: 99;
  background: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.alertPlace{
  position: fixed;
  z-index: 100;
  left: 0;
  bottom: 0;
  right: 0;
   height: 800rpx; 
  background: #ccc; 
}

.place,.cancelBtn{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  margin: 2rpx;
}

.cancelBtn{
  margin-top: 20rpx;
}


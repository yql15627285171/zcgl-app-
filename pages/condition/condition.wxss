page{
  background-color: #f0f0f0;
}

.header{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;
  height: 70rpx;
  margin-top: 60rpx;
}


.placeholder{
  font-size: 24rpx;
  color: #cbcbcb;
}

.checkView{
  display: flex;
  align-items: center;
  background-color: white;
  height: 60rpx;
  width: 75%;
}

.enquireImg{
  height: 40rpx;
  width: 40rpx;
  margin: 0 20rpx;
}
.search{
  color: burlywood;
  margin-left: 30rpx;
  font-size: 28rpx;
}

.space{
  height: 5rpx;
  background: #ffffff;
  margin-top: 40rpx;
}

.body{
  font-size: 34rpx;
  margin-top: 40rpx
}

.body{
  margin-top: 60rpx;
}
.con-line{
  display: flex;
  align-content: center;
  margin: 0  0 40rpx 40rpx; 


}

.con-line text{
  width: 160rpx;
}
.personInput,
.numberInput,
.chose{
  background: #ffffff;
  width: 460rpx;
   height: 60rpx; 
   text-align: center
  
}

.chose{
  text-align: center;
  line-height: 60rpx;
}

button{
  width: 80%;
  margin-top: 80rpx;
  margin-left: 50rpx;
  /* margin-bottom: 20rpx; */
}

.alertBG{
  /* display: none; */
  position:absolute;
  z-index: 99;
  background: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.alertPlace{
  position: fixed;
  z-index: 100;
  left: 0;
  bottom: 0;
  right: 0;
   height: 800rpx; 
  background: #ccc; 
}

.place,.cancelBtn{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  margin: 2rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.cancelBtn{
  margin-top: 20rpx;
}

